@model List<IEnumerable<UserEventJoinData>>
@{
    ViewData["Title"] = "UserEventJoinHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>User Event Join History</h1>
<div><h3>@ViewBag.UserId participation information</h3></div>

<div class="row m-1 p-1 col-11">
    <div class="col-5">
        <div class="row m-1 p-1">
            Won Event:
        </div>
        <div class="row m-1 p-1">
            <table class="table table-bordered table-sm">
                <tr><th>Event Title</th></tr>
                @foreach(var wonEvent in Model[0])
                {
                    <tr><td><a asp-action="EditEvent" asp-route-eventId="@wonEvent.EventID">@wonEvent.EventName</a></td></tr>
                }
            </table>
        </div>
    </div>
    <div class="col-5">
        <div class="row m-1 p-1">
            Participated Event:
        </div>
        <div class="row m-1 p-1">
            <table class="table table-bordered table-sm">
                <tr><th>Event Title</th></tr>
                @foreach (var partEvent in Model[1])
                {
                    <tr><td><a asp-action="EditEvent" asp-route-eventId="@partEvent.EventID">@partEvent.EventName</a></td></tr>
                }
            </table>
        </div>
    </div>
</div>
<a asp-action="UserList">Back to List</a>
    
